<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CymChad adapter example" />

    <Button
        android:id="@+id/btnHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler weak reference example" />
    <Button
        android:id="@+id/btnWorkManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Work manager example" />
    <Button
        android:id="@+id/btnLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading example" />

    <Button
        android:id="@+id/btnLottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lottie example" />
</LinearLayout>